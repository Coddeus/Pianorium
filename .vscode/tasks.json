{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo build",
            "env": {
                "RUST_BACKTRACE": "1",
                "CARGO_PROFILE_DEV_BUILD_OVERRIDE_DEBUG": "true",
            },
            "type": "cargo",
            "command": "build",
            "args": [
                "-v",
            ],
        },
        {
            "label": "cargo build release",
            "type": "cargo",
            "command": "build",
            "args": [
                "--release",
            ],
        },
    ]
}